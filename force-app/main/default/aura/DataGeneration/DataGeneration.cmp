<aura:component implements="flexipage:availableForAllPageTypes" controller="DataGeneration" access="global" >
    <aura:attribute name="log" type="String" default="" />
    <aura:attribute name="numberOfAccounts" type="integer" default="100"/>

    <div class="slds-p-around_medium">
        <lightning:card title="RESET" iconName="utility:warning">
            <div class="slds-p-horizontal_medium">
                <div><lightning:button label="Delete All Accounts and Activity" iconName="utility:warning" onclick="{!c.resetAccounts}" /></div>
            </div>
        </lightning:card>
        
        <lightning:card title="GENERATE" iconName="utility:adduser">
            <div class="slds-p-horizontal_medium">
                <div class="slds-p-bottom_x-small">
                    <ui:inputNumber label="How many accounts do you wish to generate?" class="field" value="{!v.numberOfAccounts}" size="8" />
                </div>
                <div>
                    <lightning:button label="Generate Accounts with Activity" iconName="utility:adduser" onclick="{!c.createAccounts}" />
                </div>
            </div>
        </lightning:card>

        <lightning:card title="OUTPUT" iconName="utility:engage">
            <div class="slds-p-horizontal_medium">
                <div><textarea class="slds-textarea">{!v.log}</textarea></div>
            </div>
        </lightning:card>
    </div>
</aura:component>